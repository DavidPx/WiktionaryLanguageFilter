{
  "manifest_version": 2,
  "name": "Wiktionary Language Filter",
  "description": "This simple Chrome extension scrolls Wiktionary word definition pages to your preferred language.",
  "version": "2.0.0",
  "background": {
    "scripts": [
      "storage.js",
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_icon": "icons/Icon_19.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.wiktionary.org/wiki/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "declarativeContent",
    "webNavigation",
    "*://*.wiktionary.org/*"
  ],
  "icons": {
    "16": "icons/Icon_16.png",
    "48": "icons/Icon_48.png",
    "128": "icons/Icon_128.png"
  }
}
