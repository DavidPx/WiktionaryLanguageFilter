{
  "manifest_version": 2,
  "name": "Wiktionary Language Filter",
  "default_locale": "en",
  "description": "This simple Chrome extension adds '#MyLanguage' to Wiktionary URLs in order that your browser will always jump to your language.",
  "version": "1.0.0",
  "background":{
    "scripts": ["storage.js", "background.js"]
  },
  
  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "declarativeContent",
    "webNavigation"
  ],
  "icons":{
    "128": "LargeIcon.png"
  }
}